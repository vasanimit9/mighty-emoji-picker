{
  "name": "mighty-emoji-picker",
  "license": "MIT",
  "version": "0.6.0",
  "type": "module",
  "description": "Thin web component wrapper for emoji-picker-react",
  "keywords": [
    "emoji-picker",
    "web-component-emoji-picker",
    "emoji",
    "web-component",
    "reactions",
    "reactions-picker",
    "emoji-reactions"
  ],
  "main": "./dist/main.js",
  "exports": {
    ".": {
      "import": "./dist/main.js"
    },
    "./mighty-emoji": {
      "import": "./dist/mighty-emoji.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vasanimit9/mighty-emoji-picker.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "emoji-picker-react": "^4.9.2",
    "preact": "^10.20.2",
    "@preact/compat": "^17.1.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@preact/preset-vite": "^2.8.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
